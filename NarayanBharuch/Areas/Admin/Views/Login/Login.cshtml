@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NarayanBharuch-Login</title>
    <link type="text/css" rel="stylesheet" href="~/Areas/Admin/Content/bootstrap.css" />
    <link type="text/css" rel="stylesheet" href="~/Areas/Admin/Content/materialadmin.css">
    <link type="text/css" rel="stylesheet" href="~/Areas/Admin/Content/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Areas/Admin/Content/material-design-iconic-font.min.css">
    <link type="text/css" rel="stylesheet" href="~/Areas/Admin/Content/toastr.css" />
    <style>
        .has-error .input-group-addon {
            background-color: #fff;
            border-color: #fff;
        }
    </style>
</head>
<body class="header-fixed ">
    <!-- BEGIN LOGIN SECTION -->
    <section class="section-account">
        <div class="headerTopImage"></div>
        <div class="card contain-sm style-transparent">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                    </div>
                    <div class=" col-sm-6">
                        <br />
                        <div class="card-head style-primary">
                            <header>Login</header>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data", id = "forms", autocomplete = "off", @class = "form form-validate" }))
                                {
                                    <div class="form-group floating-label">
                                        <div class="input-group">
                                            <span class="input-group-addon"><span class="fa fa-user fa-lg"></span></span>
                                            <div class="input-group-content">
                                                <input type="text" class="form-control" id="username" name="username" required autocomplete="off" title="Username is required.">
                                                <label for="username">Username</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group floating-label">
                                        <div class="input-group">
                                            <span class="input-group-addon"><span class="fa fa-key fa-lg"></span></span>
                                            <div class="input-group-content">
                                                <input type="password" class="form-control" id="password" name="password" required autocomplete="off" title="Password is required.">
                                                <label for="password">Password</label>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-xs-6 text-left">
                                        </div>
                                        <div class="col-xs-6 text-right">
                                            <button class="btn btn-primary btn-raised ink-reaction" type="submit">Login</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <input type="hidden" id="SuccessMessage" value="@ViewBag.SuccessMessage" />
    <input type="hidden" id="ErrorMessage" value="@ViewBag.ErrorMessage" />

    <script src="~/Areas/Admin/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Areas/Admin/Scripts/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Scripts/toastr.js"></script>
    <script src="~/Areas/Admin/Scripts/DevScript.js"></script>
    <script>
        $(document).ready(function () {
            var errmsg = document.getElementById('ErrorMessage').value;
            if (errmsg !== "" && errmsg != null) {
                ShowError(errmsg);
            }
        });
    </script>
</body>
</html>